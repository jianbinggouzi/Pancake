<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="200dp"
    android:minWidth="300dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@android:color/transparent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/paper_dialog_titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:text="新订单"
                    android:textColor="#FF8000"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/paper_dialog_titleText"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/paper_dialog_titleText"
                    android:text="#12"
                    android:textSize="25dp" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="配送方式：自取"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/paper_dialog_contentText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="订单总额 ¥20"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/dialog_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:gravity="center"
                android:text="备注：哈哈哈哈哈哈哈哈哈哈"
                android:textSize="20dp"
                android:layout_marginTop="10dp"/>

            <RelativeLayout
                android:layout_width="310dp"
                android:layout_height="120dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/paper_dialog_checkButton"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="60dp"
                    app:cardBackgroundColor="#4bbaff"
                    app:cardCornerRadius="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp">

                        <TextView
                            android:id="@+id/ready"
                            android:layout_width="wrap_content"
                            android:layout_height="45dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:text="可开始备货"
                            android:textColor="#fff"
                            android:textSize="22dp" />

                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="35dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="0dp"
                            android:layout_toEndOf="@+id/ready"
                            android:background="@drawable/myshape2"
                            android:gravity="center"
                            android:text="300s"
                            android:textColor="#fff"
                            android:textSize="18dp" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/wait"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="暂时搁置一会儿"
                    android:textColor="#999"
                    android:textSize="18dp" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>